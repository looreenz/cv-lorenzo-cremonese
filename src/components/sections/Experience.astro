---
import Section from "../Section.astro";

import { work } from "@cv_eng";
---

<Section title="Experience">
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual";

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a href={url} title={`Ver ${name}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <div>
                    <time datetime={startDate} data-title={startDate}>
                      {startDate}
                    </time>
                    {" - "}
                    <time datetime={endDate} data-title={endDate}>
                      {endDate}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                  {highlights.length > 0 && (
                    <ul>
                      {highlights.map((highlight) => (
                        <li>{highlight}</li>
                      ))}
                    </ul>
                  )}
                </footer>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  /* --- LISTA PRINCIPAL (Trabajos) --- */
  /* Usamos '>' para afectar solo a la lista de primer nivel y no a las anidadas */
  :global(section) > ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* --- LISTA DE HIGHLIGHTS (Puntos clave) --- */
  footer ul {
    display: flex;
    flex-direction: column;
    gap: 8px; /* Espacio pequeño entre highlights */
    margin-top: 12px;
    padding-left: 20px; /* Indentación para las viñetas */
    list-style-type: disc; /* Forzamos que se vean los puntos */
  }

  footer li {
    font-size: 0.85rem;
    color: #444;
    line-height: 1.5;
  }

  /* --- ESTILOS GENERALES DE LA TARJETA --- */
  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
    text-decoration: none;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  /* --- ESTILOS DEL TOOLTIP (Fechas) --- */
  [data-title] {
    position: relative;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: 0.75rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      monospace;
    position: absolute;
    padding: 0.2rem 0.5rem;
    bottom: -1.4rem;
    left: 50%;
    transform: translateX(-50%); /* Esto centra el tooltip perfectamente */
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  /* --- RESPONSIVE --- */
  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
